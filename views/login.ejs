<%- include("./includes/top.ejs") %>

    <main>

        <div class="container">
            <br><br>
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title grey-text text-darken-4">Login</span>

                            <form action="/login" method="POST">

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="email" type="email" name="email" id="email" class="validate"
                                               required>
                                        <label for="email">Email</label>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="password" type="password" name="password" id="password"
                                               class="validate" required>
                                        <label for="password">Password</label>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="input-field  center col s12">
                                        <button class="btn waves-effect waves-light grey darken-4" type="submit"
                                                name="action">Submit
                                            <i class="material-icons right ">send</i>
                                        </button>
                                    </div>
                                </div>

                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </main>

    <%- include("./includes/bottom.ejs") %>