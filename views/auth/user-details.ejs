<%- include("../includes/top.ejs") %>

    <main>
        <div class="container">
            <br /><br />
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <div class="row">
                                <div class="input-field col s12">
                                    <span class="card-title grey-text text-darken-4">User details</span>
                                </div>
                            </div>

                            <form action="/user/<%= currentSessionUserId %> " method="POST">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="profilePictureUrl" type="text" name="profilePictureUrl"
                                               id="profilePictureUrl" validate" />
                                        <label for="profilePictureUrl">Profile picture URL</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="center col s12">
                                        <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn waves-effect waves-light grey darken-4" type="submit"
                                                name="action">
                                            Update
                                            <i class="material-icons right">update</i>
                                        </button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include("../includes/bottom.ejs") %>