<%- include("./includes/top.ejs") %>

<main>
    <div class="container">
        <br /><br />
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="input-field col s12">
                                <span class="card-title grey-text text-darken-4">edit video</span>
                            </div>
                        </div>

                        <form action="/video/<%= videoArray.id %>" method="POST">
                            <div class="row">
                                <div class="input-field col s12">
                                    <textarea
                                        id="icon_prefix"
                                        id="videoUrl"
                                        name="videoUrl"
                                        class="materialize-textarea"
                                        required
                                    >
 <%= videoArray.videoUrl %>  </textarea
                                    >
                                    <label for="icon_prefix">Video URL</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field center col s12">
                                    <textarea
                                        id="icon_prefix"
                                        id="title"
                                        name="title"
                                        class="materialize-textarea"
                                        required
                                    >
<%= videoArray.title %> </textarea
                                    >
                                    <label for="icon_prefix">Title</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field center col s12">
                                    <textarea
                                        id="icon_prefix"
                                        id="message"
                                        name="message"
                                        class="materialize-textarea"
                                        required
                                    >
<%= videoArray.message %> </textarea
                                    >
                                    <label for="icon_prefix">Message</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="center col s12">
                                    <button
                                        class="btn waves-effect waves-light grey darken-4"
                                        type="submit"
                                        name="<%= videoArray.id  %>"
                                    >
                                        Update
                                        <i class="material-icons right">update</i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include("./includes/bottom.ejs") %>
