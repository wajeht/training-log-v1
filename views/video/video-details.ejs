<%- include("../includes/top.ejs") %>

    <main>
        <div class="container">
            <br /><br />
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <!-- <div class="card-image">
                            <img src="<%= video.videoUrl %> " />
                        </div> -->

                        <div class="video-container">
                            <video controls="controls" preload="metadata">
                                <source src="/<%= video.videoUrl %>#t=0.1" type="video/mp4" autostart="false">
                            </video>
                        </div>



                        <div class="card-content">
                            <span class="card-title grey-text text-darken-4">
                                <%= video.title %>
                            </span>
                            <p class="render-line-break">
                                <%= video.message %>
                            </p>
                        </div>

                        <div class=" card-action">
                            <div class="chip left post-author-chip-left">
                                <img
                                     src="<%= !videoUserProfileUrl ? '/images/default_profile_picture.jpg' : '../'+ videoUserProfileUrl %>">
                                <form id="post-author-videos" action="/post-author-videos/<%= author %>" method="post">
                                    <input type="hidden" name="postAuthorId" id="postAuthorId"
                                           value="<%= postAuthorId%>" />

                                    <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
                                    <a style="color: #114732; font-weight: bold;" href="javascript:{}"
                                       onclick="document.getElementById('post-author-videos').submit(); return false;">
                                        <%= author %>
                                    </a>
                                </form> ‏‎ ‎‏‎
                            </div>
                            <!-- <div class="chip">
                                <img src="<%= videoUserProfileUrl %>">
                                <a href="/post-author-videos/<%= postAuthorId %> ">
                                    <%= author %>
                                </a>
                            </div> -->
                            <div class="chip">
                                <%= date %>
                            </div>


                            <% if (isAuthenticated && author==currentSessionUser) { %>


                                <div class="chip right">
                                    <form id="edit-video" action="/edit-video/<%= video.id %>" method="post">
                                        <input type="hidden" name="title" id="title" value="<%= video.title %>" />
                                        <input type="hidden" name="message" id="message" value="<%= video.message %>" />
                                        <input type="hidden" name="id" id="id" value="<%= video.id %>" />
                                        <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
                                        <a href="javascript:{}"
                                           onclick="document.getElementById('edit-video').submit(); return false;"><i
                                               class="material-icons grey-text text-darken-2"
                                               style="font-size: 20px">edit</i></a>
                                    </form> ‏‎ ‎‏‎
                                </div>


                                <!-- Modal Trigger -->
                                <div class="chip right">
                                    <a class="modal-trigger" href="#modal1"><i
                                           class="material-icons grey-text text-darken-2"
                                           style="font-size: 20px">delete</i></a>
                                </div>

                                <!-- Modal Structure -->
                                <div id="modal1" class="modal">
                                    <div class="modal-content">
                                        <h4>Confirmation</h4>
                                        <p>Are you sure you want to delete this post?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <form id="delete-video" class="right" action="/delete-video/<%= video.id %>"
                                              method="post">
                                            <input type="hidden" name="id" id="id" value="<%= video.id %>" />
                                            <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
                                            <button class="btn waves-effect waves-green"
                                                    style="margin-right: 5px; background-color: #114732;"
                                                    type="submit">Yes</button>
                                            <a href="#!" style="background-color: #114732; font-weight: bold;" class="modal-close
                                               waves-effect waves-green btn-flat white-text">No</a>
                                            <!-- <a href=" javascript:{}"
                                                    onclick="document.getElementById('delete-video').submit(); return false;">
                                                <i class="material-icons grey-text text-darken-2"
                                                   style="font-size: 20px">delete</i>
                                                </a> -->
                                        </form> ‏‎ ‎
                                    </div>
                                </div>



                                <% } %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <% if (comments.length> 0) { %>
            <% for (let comment of comments) { %>




                <div class="container">
                    <div class="row">

                        <div class="col s12">
                            <div class="card">

                                <div class="card-content">
                                    <br />
                                    <div class="row">
                                        <div class="col s2">

                                            <img src="<%= !comment.profilePictureUrl ? '/images/default_profile_picture.jpg' : comment.profilePictureUrl%>"
                                                 alt="" class="circle responsive-img" />
                                        </div>
                                        <div class="col s10">
                                            <span class="card-title grey-text text-darken-4">
                                                <%= comment.username %>
                                            </span>
                                            <span class="black-text">
                                                <%= comment.comment %>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <% } %>
                    <% } %>

                        <% if (isAuthenticated) { %>

                            <div class="container">
                                <div class="row">
                                    <div class="col s12">
                                        <div class="card">
                                            <div class="card-content">
                                                <div class="row">
                                                    <div class="input-field col s12">
                                                        <span class="card-title grey-text text-darken-4">Comment</span>
                                                    </div>
                                                </div>

                                                <form action="/add-comment" method="POST">
                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <textarea id="icon_prefix" id="message" name="message"
                                                                      class="materialize-textarea" required></textarea>
                                                            <label for="icon_prefix">Message</label>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="center col s12">
                                                            <input type="hidden" id="videoId" name="videoId"
                                                                   value="<%= video.id  %>">
                                                            <input type="hidden" id="userId" name="userId"
                                                                   value="<%=  currentSessionUserId %>">
                                                            <input type="hidden" id="csrfToken" name="_csrf"
                                                                   value="<%= csrfToken %>">

                                                            <button class="btn waves-effect waves-light grey darken-4"
                                                                    type="submit" name="action">
                                                                Submit
                                                                <i class="material-icons right">send</i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <br>
    </main>

    <%- include("../includes/bottom.ejs") %>