    <main>
        <div class="container">
            <br /><br />
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-image">
                            <img src="<%= video.videoUrl %> " />
                        </div>



                        <div class="card-content">
                            <span class="card-title grey-text text-darken-4">
                                <%= video.title %>
                            </span>

                            <div class="chip">
                                <img src="<%= video.videoUrl %>">
                                <%= author %>
                            </div>




                            <div style="white-space: pre-wrap">
                                <%= video.message %>
                            </div>
                        </div>


                        <% if (isAuthenticated && author==currentSessionUser) { %>

                            <div class="card-action">
                                <form class="left" action="/edit-video/<%= video.id %>" method="post">
                                    <input type="hidden" name="title" id="title" value="<%= video.title %>" />
                                    <input type="hidden" name="message" id="message" value="<%= video.message %>" />
                                    <input type="hidden" name="id" id="id" value="<%= video.id %>" />
                                    <button class="btn waves-effect waves-light grey darken-4" type="submit">edit<i
                                           class="material-icons right">edit</i></button>
                                </form>
                                <form class="right" action="/delete-video/<%= video.id %>" method="post">
                                    <input type="hidden" name="id" id="id" value="<%= video.id %>" />
                                    <button class="btn waves-effect waves-light grey darken-4" type="submit">delete<i
                                           class="material-icons right">delete</i></button>
                                </form>
                                <br />
                                <br />
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
