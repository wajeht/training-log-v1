<%- include("../includes/top.ejs") %>

<main>
	<div class="container">
		<br /><br />

		<div class="row">
			<!-- --------------------------VIDEO-DETAILS------------------------------ -->
			<div class="col s9">
				<div class="card">
					<div class="video-container">
						<video controls preload="none" poster="../<%= video.screenshotUrl %>">
							<source src="/<%= video.videoUrl %>" type="video/mp4" />
						</video>
					</div>

					<div class="card-content">
						<span class="card-title grey-text text-darken-4"> <%= video.title %> </span>
						<p class="render-line-break"><%= video.message %></p>
					</div>

					<div class="card-action">
						<div class="chip left post-author-chip-left">
							<img
								src="<%= !videoUserProfileUrl ? '/images/default_profile_picture.jpg' : '../' + videoUserProfileUrl %>"
							/>
							<!-- <form
								id="post-author-videos"
								action="/post-author-videos/<%= author %>"
								method="post"
							>
								<input
									type="hidden"
									name="postAuthorId"
									id="postAuthorId"
									value="<%= postAuthorId%>"
								/>

								<input
									type="hidden"
									id="csrfToken"
									name="_csrf"
									value="<%= csrfToken %>"
								/> -->
								<a id="post-author-videos"
									style="color: #114732; font-weight: bold"
									href="/videos/<%= userID %>"
								>
									<%= author %>
								</a>
							<!-- </form> -->
							‏‎ ‎‏‎
						</div>
						<!-- <div class="chip">
								<img src="<%= videoUserProfileUrl %>">
								<a href="/post-author-videos/<%= postAuthorId %> ">
									<%= author %>
								</a>
							</div> -->
						<div class="chip"><%= date %></div>

						<!-- --------------------------UPDATE-&-DELETE------------------------------ -->
						<% if (isAuthenticated && author==currentSessionUser) { %>

						<div class="chip right">
							<form
								id="edit-video"
								action="/edit-video/<%= video.id %>"
								method="post"
							>
								<input
									type="hidden"
									name="title"
									id="title"
									value="<%= video.title %>"
								/>
								<input
									type="hidden"
									name="message"
									id="message"
									value="<%= video.message %>"
								/>
								<input type="hidden" name="id" id="id" value="<%= video.id %>" />
								<input
									type="hidden"
									id="csrfToken"
									name="_csrf"
									value="<%= csrfToken %>"
								/>
								<a
									href="javascript:{}"
									onclick="document.getElementById('edit-video').submit(); return false;"
									><i
										class="material-icons grey-text text-darken-2"
										style="font-size: 20px"
										>edit</i
									></a
								>
							</form>
							‏‎ ‎‏‎
						</div>

						<!-- Modal Trigger -->
						<div class="chip right">
							<a class="modal-trigger" href="#modal1"
								><i
									class="material-icons grey-text text-darken-2"
									style="font-size: 20px"
									>delete</i
								></a
							>
						</div>

						<!-- Modal Structure -->
						<div id="modal1" class="modal">
							<div class="modal-content">
								<h4>Confirmation</h4>
								<p>Are you sure you want to delete this post?</p>
							</div>
							<div class="modal-footer">
								<form
									id="delete-video"
									class="right"
									action="/delete-video/<%= video.id %>"
									method="post"
								>
									<input
										type="hidden"
										name="id"
										id="id"
										value="<%= video.id %>"
									/>
									<input
										type="hidden"
										id="csrfToken"
										name="_csrf"
										value="<%= csrfToken %>"
									/>
									<button
										class="btn waves-effect waves-green"
										style="margin-right: 5px; background-color: #114732"
										type="submit"
									>
										Yes
									</button>
									<a
										href="#!"
										style="background-color: #114732; font-weight: bold"
										class="
											modal-close
											waves-effect waves-green
											btn-flat
											white-text
										"
										>No</a
									>
									<!-- <a href=" javascript:{}"
													onclick="document.getElementById('delete-video').submit(); return false;">
												<i class="material-icons grey-text text-darken-2"
												   style="font-size: 20px">delete</i>
												</a> -->
								</form>
								‏‎ ‎
							</div>
						</div>

						<% } %>
					</div>
				</div>
			</div>

			<!-- --------------------------RECENT-VIDEOS----------------------------- -->
			<% if ( videosArray.length> 0 ) { %> <% for (let v of videosArray) { %>

			<div class="col s3">
				<a href="/video/<%= v.id %> ">
					<div class="card hoverable">
						<div class="card-image waves-effect waves-block waves-light">
							<img src="../<%= v.screenshotUrl %>" alt="" />
						</div>
						<div class="post-title center grey-text text-darken-4"><%= v.title %></div>
					</div>
				</a>
			</div>

			<% } %> <% } %>

			<!-- --------------------------COMMENTS------------------------------ -->
			<% if (comments.length> 0) { %> <% for (let comment of comments) { %>

			<div class="col s9 comment-message">
				<div class="card">
					<div class="card-content">
						<br />
						<div class="row">
							<div class="col s2">
								<img
									src="<%= !comment.profilePictureUrl ? '/images/default_profile_picture.jpg' : '../' + comment.profilePictureUrl%>"
									alt=""
									class="circle responsive-img"
								/>
							</div>
							<div class="col s10">
								<span class="card-title grey-text text-darken-4">
									<a
										style="color: #114732; font-weight: bold"
										href="/comment-user-videos/<%= comment.userId %>"
									>
										<%= comment.username %>
									</a>
								</span>
								<span class="black-text"> <%= comment.comment %> </span>
							</div>
						</div>
					</div>
				</div>
			</div>

			<% } %> <% } %>

			<!-- --------------------------COMMENTS-BOX----------------------------- -->
			<div class="col s9">
				<div class="card">
					<div class="card-content">
						<% if (isAuthenticated) { %>
						<div class="row">
							<div class="input-field col s12">
								<span class="card-title grey-text text-darken-4">Comment</span>
							</div>
						</div>


						<form action="/add-comment" method="POST">
							<div class="row">
								<div class="input-field col s12">
									<textarea
										id="icon_prefix"
										id="message"
										name="message"
										class="materialize-textarea"
										required
									></textarea>
									<label for="icon_prefix">Message</label>
								</div>
							</div>

							<div class="row">
								<div class="center col s12">
									<input
										type="hidden"
										id="videoId"
										name="videoId"
										value="<%= video.id  %>"
									/>
									<input
										type="hidden"
										id="userId"
										name="userId"
										value="<%=  currentSessionUserId %>"
									/>
									<input
										type="hidden"
										id="csrfToken"
										name="_csrf"
										value="<%= csrfToken %>"
									/>

									<button
										class="btn waves-effect waves-light teal darken-4"
										type="submit"
										name="action"
									>
										Submit
										<i class="material-icons right">send</i>
									</button>
								</div>
							</div>
						</form>

						<% } else { %>
							<div class="row">
								<div class="col s12">
									<span class="card-title grey-text text-darken-4">Comment</span>
									<br>
									<i>
										<p><a href="/login" style="color: #114732; font-weight: bold">Login</a> to comment!</p>
									</i>
								</div>
						<% } %>
					</div>
				</div>
			</div>

		</div>
	</div>

	<br />
</main>

<%- include("../includes/bottom.ejs") %>
