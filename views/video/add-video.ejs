<%- include("../includes/top.ejs") %>



    <main>

        <div class="container">
            <br><br>
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">

                            <div class="row">
                                <div class="input-field col s12">
                                    <span class="card-title grey-text text-darken-4">Add video</span>
                                </div>
                            </div>


                            <form action="/add-video" method="POST">


                                <div id="image-preview" class="row">
                                    <div class="input-field col s12 center">
                                        <img id="image-output" width="50%" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <div class="file-field input-field">
                                            <div class="btn waves-effect waves-light grey darken-4">
                                                <span>Upload</span>
                                                <input type="file" multiple>
                                            </div>
                                            <div class="file-path-wrapper">
                                                <input class="file-path validate" type="text"
                                                       placeholder="Upload one or more files" accept="image/*"
                                                       name="image-file" id="image-file" onchange="previewFile()">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input type="text" class="datepicker" name="date" id="date" required>
                                        <label for="icon_prefix">Date</label>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="input-field col s12">
                                        <textarea id="icon_prefix" id="videoUrl" name="videoUrl"
                                                  class="materialize-textarea" required></textarea>
                                        <label for="icon_prefix">Video URL</label>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="input-field  center col s12">
                                        <textarea id="icon_prefix" id="title" name="title" class="materialize-textarea"
                                                  required></textarea>
                                        <label for="icon_prefix">Title</label>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="input-field  center col s12">
                                        <textarea id="icon_prefix" id="message" name="message"
                                                  class="materialize-textarea" required></textarea>
                                        <label for="icon_prefix">Message</label>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="center col s12">
                                        <input type="hidden" id="csrfToken" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn waves-effect waves-light grey darken-4" type="submit"
                                                name="action">add
                                            <i class="material-icons right ">add</i>
                                        </button>
                                    </div>
                                </div>

                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </main>

    <%- include("../includes/bottom.ejs") %>